{
  "name": "normalizr-decorators",
  "version": "1.0.0-alpha.1",
  "description": "Schema decorators for normalizr",
  "author": "Michael Wolbert <michael.wolbert@gmail.com>",
  "bugs": {
    "url": "https://github.com/mchlbrnd/normalizr-decorators/issues"
  },
  "homepage": "https://github.com/mchlbrnd/normalizr-decorators",
  "repository": {
    "url": "https://github.com/mchlbrnd/normalizr-decorators.git",
    "type": "git"
  },
  "license": "MIT",
  "keywords": [
    "decorator",
    "reflect",
    "flux",
    "redux",
    "normalize",
    "denormalize",
    "api",
    "json"
  ],
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "main": "dist/src/index.js",
  "typings": "dist/src/index.d.ts",
  "engineStrict": true,
  "engines": {
    "node": ">= 6.9.0"
  },
  "scripts": {
    "clean": "rimraf coverage build tmp",
    "build": "tsc -p tsconfig.release.json",
    "watch": "tsc -w -p tsconfig.release.json",
    "lint": "tslint -t stylish '{src,__tests__}/**/*.{ts,tsx}'",
    "test": "npm run test-only",
    "test-only": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      ".(ts|tsx)": "<rootDir>/preprocessor.js"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "testRegex": "<rootDir>(__tests__/).*\\.(test|spec)\\.(ts|js)$",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx,js,jsx}",
      "!src/**/*.d.ts"
    ]
  },
  "devDependencies": {
    "@types/jest": "~19.2.2",
    "normalizr": "^3.2.2",
    "@types/node": "~6.0.70",
    "jest": "~19.0.2",
    "rimraf": "~2.6.1",
    "tslint": "~4.5.1",
    "tslint-microsoft-contrib": "~4.0.0",
    "typescript": "~2.2.2"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.10",
    "tslib": "~1.6.0"
  },
  "peerDependencies": {
    "normalizr": "^3.2.2"
  }
}
